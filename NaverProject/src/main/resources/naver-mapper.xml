<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"https://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="naverMapper">

	<!-- 로그인용 쿼리문 -->
	<select id="loginNaver" parameterType="string" resultType="naver">
		SELECT
		       NAVERNAME
		      ,PHONE
		      ,EMAIL
		      ,GENDER
		      ,NICKNAME
		      ,BIRTHDAY
		  FROM
		       NAVERMEMBER
		 WHERE
		       email = #{email}
	</select>
	
	<!-- 회원 가입용 쿼리문 -->
	<insert id="naverInsert" parameterType="naver">
		INSERT
		  INTO
		       NAVERMEMBER
		       (
		       NAVERNAME
		      ,PHONE
		      ,EMAIL
		      ,GENDER
		      ,NICKNAME
		      ,BIRTHDAY
		       )
		VALUES
		       (
		       #{naverName}
		      ,#{phone}
		      ,#{email}
		      ,#{gender}
		      ,#{nickName}
		      ,#{birthDay}
		       )
	</insert>
	
	<!-- 이메일 중복체크용 쿼리문 -->
	<select id="emailCheck" resultType="_int">
		select
		       count(*)
		  from
		       NAVERMEMBER
		 where
		       email = #{email}
	</select>

  
</mapper>
